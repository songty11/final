
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
        <div class="alert alert-danger"><%= message %></div>
      <% end %>
      </ul>
  <% end %>


<div class="container-fluid">
  <div class="row">
<div class="col-sm-4 col-md-4 col-lg-4">
<h1> <span class="label label-primary">Update My Infomation</span></h1>
</div>
</div>
<hr>
  <div class = "row">
<div class="col-sm-4 col-md-4 col-lg-4">
<div class="input-group">
  <span class="input-group-addon">
    <%= f.label :name %></span>
    <%= f.text_field :name ,class:"form-control"%>
</div>
  
  <br>
  <div class="input-group">
  <span class="input-group-addon"">
    <%= f.label :birthday %></span>
    <%= f.text_field :birthday,class:"form-control"%>
  </div>
  <br>
   <div class="input-group">
  <span class="input-group-addon"">
  <%= f.label :email %></span>
   <%= f.text_field :email,class:"form-control"%>
   </div>
  <br>
  <div class="input-group">
  <span class="input-group-addon">
     <%= f.label :gender %></span>
   <%= f.select :gender, User::GENDER_TYPES,{}, {class:"form-control"}%> 
</div>
    <%= f.hidden_field :email%>

 </div>
  <div class="col-sm-5 col-md-5 col-lg-5">
  </div>
 <div class="col-sm-3 col-md-3 col-lg-3">
<div class='avatar-box'>
  <div class="field">
    <% if f.object.image? %>
      <%= image_tag f.object.image, class:"img-circle"%>
      <%else %>
        <%if @user.gender == 'Female'%>
          <p><%= image_tag "female_default.png", class:"img-circle"%></p>
        <%else%>
          <p><%= image_tag "male_default.png", class:"img-circle"%></p>
        <%end%>
    <% end %>
    <%= f.label :image, "Avatar" %><br>
    <%= f.file_field :image %>
  </div>
  </div>
  </div>
  </div>
  <hr>
  <div class = "row">
   <div class="col-sm-12 col-md-12 col-lg-12">
   <div class="text-center">
    <%= f.submit "Update",class:"btn btn-default"%>
  </div>
  </div>
  </div>

<% end %>
</div>
