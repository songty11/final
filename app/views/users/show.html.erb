<div class="container-fluid">
  <div class="row">
<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">

<h1> <span class="label label-primary">My Account</span>
<small><small><span class="label label-warning">
	 <%= link_to "Edit", edit_user_path(@user.id),style:"color:#ffffff;"%>
</span></small></small>
</h1>
</div>
</div>
<hr>
<div class = "row">
<div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
<% if @user.id == session[:user_id].to_i %>
  <strong><span class="label label-info">Name:</span><p><%= @user.name %></p></strong>
  <strong><span class="label label-info">Email:</span><p><%= @user.email %></p></strong>
  <strong><span class="label label-info">Birthday:</span><p><%= @user.birthday %></p></strong>
  <strong><span class="label label-info">Gender:</span><p><%= @user.gender %></p></strong>
  <strong><span class="label label-info">Note:</span><p><%= @user.note %></p></strong>
<% else %>
<% end %>
</div>
<div class="col-xs-0 col-sm-3 col-md-3 col-lg-3">
<%avatar=Avatar.find_by(user_id:@user.id)%>
<div class='avatar-box'>
 <p><%= image_tag avatar.image_url, class:"img-circle"%></p>
 <%=link_to "Change",edit_avatar_path(avatar.id),:class=>"btn btn-sm btn-warning text-center"%>
 </div>
</div>
</div>
</div>
<hr>

 <div class="text-center">

    <%=button_to "Delete",user_path(@user.id),:method => :delete, :class=>"btn btn-sm btn-danger"%>
  </div>
