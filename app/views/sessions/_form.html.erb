
<div class="container sign-in-up">
<div class="row">
    <div class="col-md-4 col-md-offset-4">
<h1>Sign In</h1>
<%= form_tag "/sessions" do  %>
 <div class="form-group">
 	<div class="right-inner-addon">
 		<i class="fa fa-envelope"></i>
  		<p><%= text_field_tag :email, '', autofocus: true, size: 40, required: true , placeholder:"Email Address", class:"form-control input-lg"%></p>
  		
  	</div>
  </div>
  <div class="form-group">
  	<div class="right-inner-addon">
  		<i class="fa fa-key"></i>
  		<p><%= password_field_tag :password, '', size: 40, required: true, placeholder:"Password", class:"form-control input-lg"%></p>
  	</div>
  </div>
  <div class="text-center">
  <p><%= submit_tag "Log In", class:"btn btn-primary"%></p>
  </div>

<% end %>
</div>
